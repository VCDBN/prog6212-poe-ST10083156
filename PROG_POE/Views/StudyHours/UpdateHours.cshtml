@using PROG_POE
@model PROG_POE.Models.ViewModels.StudyHoursViewModel


    <h1>Update Study Hours</h1>
<h3>Enter the amount of hours you have studied for your module</h3>
<h5 style="color:red">@ViewBag.Error</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateHours">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Module</label>
                <select asp-for="SelectedModule" class="form-select" asp-items= "ViewBag.ModuleOptions">Select a module</select>
            </div>
            <div class="form-group">
                <label class="control-label">Week number</label>
                <input name="WeekNum" type="number" class="form-control"/>
                
             </div>
            <div class="form-group">
                <label class="control-label">Hours studied</label>
                <input name="HrsStudied" type="number" class="form-control"/>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
