@model IEnumerable<PROG_POE.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<h1>Modules</h1>
<h3>Welcome @TempData["UserAsTempData"]</h3>

<p>
    <a asp-action="Create">Add Modules</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>
            <th>
                Class Hours
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassHours)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Code">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Code">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Code">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if(Semester.NumWeeks==0)
{
    <a asp-controller="Semester" asp-action="DetailsInput" class="btn btn-primary">Done</a>
}
else
{
    <a asp-controller="Semester" asp-action="CalculateHours" class="btn btn-primary">Done</a>

}
